[Unit]
Description=Chessil game server (%i)
After=network.target

[Service]
Type=simple
WorkingDirectory=/home/ubuntu/chessil.com/game
Environment=PORT=%i
ExecStart=/usr/bin/node gameserver.js
Restart=always
RestartSec=1
KillSignal=SIGTERM
TimeoutStopSec=30

# Adjust as needed
User=ubuntu
Group=ubuntu

[Install]
WantedBy=multi-user.target
